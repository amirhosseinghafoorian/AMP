<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gl_1_signup"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.02"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gl_2_signup"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gl_3_signup"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gl_4_signup"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gl_5_signup"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gl_6_signup"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.87"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gl_7_signup"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25"/>

    <ImageView
        android:src="@drawable/amplogo"
        android:scaleType="centerCrop"
        android:id="@+id/signup_logo"
        android:layout_width="150dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toEndOf="@id/gl_3_signup"
        app:layout_constraintEnd_toStartOf="@id/gl_4_signup"
        app:layout_constraintTop_toBottomOf="@id/gl_1_signup"
        app:layout_constraintBottom_toTopOf="@id/signup_intro_1"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/signup_intro_1"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/signup_logo"
        app:layout_constraintStart_toEndOf="@id/gl_3_signup"
        app:layout_constraintEnd_toStartOf="@id/gl_4_signup"
        app:layout_constraintBottom_toTopOf="@id/gl_7_signup"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/sign_up"/>

    <TextView
        android:id="@+id/signup_intro_2"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/signup_intro_1"
        app:layout_constraintStart_toEndOf="@id/gl_3_signup"
        app:layout_constraintEnd_toStartOf="@id/gl_4_signup"
        android:textSize="20sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/create_a_new_account"/>

    <TextView
        android:id="@+id/signup_intro_3"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@id/gl_2_signup"
        app:layout_constraintStart_toEndOf="@id/signup_intro_4"
        app:layout_constraintEnd_toStartOf="@id/gl_4_signup"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/have_account"/>

    <TextView
        android:layout_marginEnd="5dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:id="@+id/signup_intro_4"
        android:gravity="end"
        app:layout_constraintTop_toBottomOf="@id/gl_2_signup"
        app:layout_constraintStart_toEndOf="@id/gl_3_signup"
        app:layout_constraintEnd_toStartOf="@id/signup_intro_3"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textColor="@color/colorPrimary"
        android:text="@string/login"/>

    <com.google.android.material.textfield.TextInputLayout
        app:layout_constraintVertical_chainStyle="packed"
        android:id="@+id/signup_box_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/gl_3_signup"
        app:layout_constraintEnd_toStartOf="@id/gl_4_signup"
        app:layout_constraintTop_toBottomOf="@id/gl_5_signup"
        app:layout_constraintBottom_toTopOf="@id/signup_box_2"
        android:textColor="@android:color/black"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxStrokeColor="@color/colorPrimary"
        app:hintTextColor="@color/colorPrimary"
        android:hint="@string/full_name"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/signup_box_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/gl_3_signup"
        app:layout_constraintEnd_toStartOf="@id/gl_4_signup"
        app:layout_constraintTop_toBottomOf="@id/signup_box_1"
        app:layout_constraintBottom_toTopOf="@id/signup_box_3"
        android:textColor="@android:color/black"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxStrokeColor="@color/colorPrimary"
        app:hintTextColor="@color/colorPrimary"
        android:hint="@string/email"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/signup_box_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/gl_3_signup"
        app:layout_constraintEnd_toStartOf="@id/gl_4_signup"
        app:layout_constraintTop_toBottomOf="@id/signup_box_2"
        app:layout_constraintBottom_toTopOf="@id/signup_box_4"
        android:textColor="@android:color/black"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxStrokeColor="@color/colorPrimary"
        app:hintTextColor="@color/colorPrimary"
        android:hint="@string/pass1"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/signup_box_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@id/gl_3_signup"
        app:layout_constraintEnd_toStartOf="@id/gl_4_signup"
        app:layout_constraintTop_toBottomOf="@id/signup_box_3"
        app:layout_constraintBottom_toTopOf="@id/signup_box_5"
        android:textColor="@android:color/black"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxStrokeColor="@color/colorPrimary"
        app:hintTextColor="@color/colorPrimary"
        android:hint="@string/pass2"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/signup_box_5"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@id/gl_3_signup"
        app:layout_constraintEnd_toStartOf="@id/gl_4_signup"
        app:layout_constraintTop_toBottomOf="@id/signup_box_4"
        app:layout_constraintBottom_toTopOf="@id/gl_6_signup"
        android:text="@string/join"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:textColorHint="@android:color/white"
        />

</androidx.constraintlayout.widget.ConstraintLayout>