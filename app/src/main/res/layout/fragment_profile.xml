    <!--    </com.google.android.material.appbar.AppBarLayout>-->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/profile_gl_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.025" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/profile_gl_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.975" />

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/profile_cv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/profile_gl_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/profile_gl_2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/profile_cv_gl_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.2"/>

            <com.pkmmte.view.CircularImageView
                android:id="@+id/profile_iv"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_baseline_person_24"
                app:border="true"
                app:border_color="#1B731F"
                app:border_width="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/profile_cv_gl_3"/>

            <TextView
                android:id="@+id/cv_tx1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/profile_tx1"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toStartOf="@id/profile_cv_gl_3"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/cv_tx2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_tx2"
                android:textSize="12sp"

                android:layout_marginBottom="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toStartOf="@id/profile_cv_gl_3"
                app:layout_constraintTop_toBottomOf="@id/cv_tx1"
                />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="profile_iv,cv_tx2"/>

            <TextView
                android:id="@+id/profile_tx3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_tx3"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toBottomOf="@id/profile_iv"
                app:layout_constraintEnd_toEndOf="@id/profile_tx4"
                app:layout_constraintStart_toStartOf="@id/profile_tx4"
                app:layout_constraintBottom_toTopOf="@id/profile_tx4"/>

            <TextView
                android:id="@+id/profile_tx4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_tx4"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/profile_cv_gl_3"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/profile_tx5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_tx5"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="@id/profile_tx3"
                app:layout_constraintBottom_toTopOf="@id/profile_tx6"
                app:layout_constraintStart_toStartOf="@id/profile_tx6"
                app:layout_constraintEnd_toEndOf="@id/profile_tx6"/>

            <TextView
                android:id="@+id/profile_tx6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_tx6"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/profile_cv_gl_3"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/profile_bt_fl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#286de6"
                android:text="@string/profile_bt_fl"
                app:cornerRadius="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/profile_chip_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/profile_gl_1"
        app:layout_constraintEnd_toEndOf="@id/profile_gl_2"
        app:layout_constraintTop_toBottomOf="@id/profile_cv"
        android:layout_marginTop="10dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/profile_ch_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/background_light"
            android:text="@string/profile_ch_1"
            android:textColor="@color/colorPrimary"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/profile_ch_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_ch_2"
            android:backgroundTint="@color/backgroundColor"/>

    </com.google.android.material.chip.ChipGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/profile_recycler"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profile_chip_group"
        app:layout_constraintStart_toStartOf="@id/profile_gl_1"
        app:layout_constraintEnd_toEndOf="@id/profile_gl_2"
        android:orientation="vertical"
        tools:listitem="@layout/profile_article"/>


</androidx.constraintlayout.widget.ConstraintLayout>