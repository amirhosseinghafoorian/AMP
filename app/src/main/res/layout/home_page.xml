<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9E9E9"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/home_page_gl_1"
            app:layout_constraintGuide_percent="0.025"/>

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/home_page_gl_2"
            app:layout_constraintGuide_percent="0.975"/>

        <com.google.android.material.tabs.TabLayout
            android:layoutDirection="rtl"
            android:id="@+id/TL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@android:color/white"
            app:tabBackground="@color/colorPrimary"
            app:tabContentStart="0dp">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="برای شما"
                />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="بورس"
                />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="سهام"
                />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="اقتصاد"
                />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="سرمایه گذاری"
                />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="مالی"
                />

        </com.google.android.material.tabs.TabLayout>

        <androidx.appcompat.widget.SearchView

            android:id="@+id/sv"
            android:layout_margin="5dp"
            android:background="@android:color/white"
            android:layout_width="0dp"
            app:layout_constraintStart_toEndOf="@id/home_page_gl_1"
            app:layout_constraintEnd_toStartOf="@id/home_page_gl_2"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/TL"/>

        <com.google.android.material.card.MaterialCardView
            app:rippleColor="@color/colorPrimary"
            android:id="@+id/article_cv_1"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="120dp"
            app:cardCornerRadius="20dp"
            android:checkable="true"
            android:focusable="true"
            android:clickable="true"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/sv"
            app:layout_constraintStart_toEndOf="@id/home_page_gl_1"
            app:layout_constraintEnd_toStartOf="@id/home_page_gl_2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/home_page_gl_1_1"
                    app:layout_constraintGuide_percent="0.5"/>

                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/home_page_gl_1_2"
                    app:layout_constraintGuide_percent="0.85"/>

                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/home_page_gl_1_3"
                    app:layout_constraintGuide_percent="0.3"/>

                <ImageView
                    android:src="@android:color/holo_blue_dark"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toEndOf="@id/home_page_gl_1_2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/home_page_gl_1_1"
                    android:contentDescription="@string/todo" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_margin="2dp"
                    android:textColor="@android:color/black"
                    android:textSize="17sp"
                    android:text="@string/enterText"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:layout_constraintEnd_toStartOf="@id/home_page_gl_1_2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/home_page_gl_1_3"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_margin="2dp"
                    android:textSize="12sp"
                    android:text="@string/email"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:layout_constraintEnd_toStartOf="@id/home_page_gl_1_2"
                    app:layout_constraintTop_toTopOf="@id/home_page_gl_1_3"
                    app:layout_constraintBottom_toTopOf="@id/home_page_gl_1_1"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_margin="2dp"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:text="@string/enterText2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_page_gl_1_1"
                    app:layout_constraintBottom_toBottomOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            app:rippleColor="@color/colorPrimary"
            android:id="@+id/CV1"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="120dp"
            app:cardCornerRadius="20dp"
            android:checkable="true"
            android:focusable="true"
            android:clickable="true"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/article_cv_1"
            app:layout_constraintStart_toEndOf="@id/home_page_gl_1"
            app:layout_constraintEnd_toStartOf="@id/home_page_gl_2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/home_page_gl_2_1"
                    app:layout_constraintGuide_percent="0.5"/>

                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/home_page_gl_2_2"
                    app:layout_constraintGuide_percent="0.85"/>

                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/home_page_gl_2_3"
                    app:layout_constraintGuide_percent="0.3"/>

                <ImageView
                    android:src="@android:color/holo_blue_dark"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toEndOf="@id/home_page_gl_2_2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/home_page_gl_2_1"
                    android:contentDescription="@string/todo" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_margin="2dp"
                    android:textColor="@android:color/black"
                    android:textSize="17sp"
                    android:text="@string/enterText"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:layout_constraintEnd_toStartOf="@id/home_page_gl_2_2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/home_page_gl_2_3"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_margin="2dp"
                    android:textSize="12sp"
                    android:text="@string/email"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:layout_constraintEnd_toStartOf="@id/home_page_gl_2_2"
                    app:layout_constraintTop_toTopOf="@id/home_page_gl_2_3"
                    app:layout_constraintBottom_toTopOf="@id/home_page_gl_2_1"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_margin="2dp"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:text="@string/enterText2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_page_gl_2_1"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            app:rippleColor="@color/colorPrimary"
            android:id="@+id/CV2"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="120dp"
            app:cardCornerRadius="20dp"
            android:checkable="true"
            android:focusable="true"
            android:clickable="true"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/CV1"
            app:layout_constraintStart_toEndOf="@id/home_page_gl_1"
            app:layout_constraintEnd_toStartOf="@id/home_page_gl_2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/home_page_gl_3_1"
                    app:layout_constraintGuide_percent="0.5"/>

                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/home_page_gl_3_2"
                    app:layout_constraintGuide_percent="0.85"/>

                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/home_page_gl_3_3"
                    app:layout_constraintGuide_percent="0.3"/>

                <ImageView
                    android:src="@android:color/holo_blue_dark"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toEndOf="@id/home_page_gl_3_2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/home_page_gl_3_1"
                    android:contentDescription="@string/todo" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_margin="2dp"
                    android:textColor="@android:color/black"
                    android:textSize="17sp"
                    android:text="@string/enterText"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:layout_constraintEnd_toStartOf="@id/home_page_gl_3_2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/home_page_gl_3_3"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_margin="2dp"
                    android:textSize="12sp"
                    android:text="@string/email"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:layout_constraintEnd_toStartOf="@id/home_page_gl_3_2"
                    app:layout_constraintTop_toTopOf="@id/home_page_gl_3_3"
                    app:layout_constraintBottom_toTopOf="@id/home_page_gl_3_1"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_margin="2dp"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:text="@string/enterText2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_page_gl_3_1"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.textview.MaterialTextView
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:text="برترین مقالات"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:id="@+id/TV"
            app:layout_constraintStart_toEndOf="@id/home_page_gl_1"
            app:layout_constraintEnd_toStartOf="@id/home_page_gl_2"
            app:layout_constraintTop_toBottomOf="@id/CV2"
            android:layout_height="wrap_content"/>

        <com.google.android.material.card.MaterialCardView
            app:rippleColor="@color/colorPrimary"
            android:id="@+id/CV3"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="120dp"
            app:cardCornerRadius="20dp"
            android:checkable="true"
            android:focusable="true"
            android:clickable="true"
            app:cardElevation="10dp"
            app:layout_constraintTop_toBottomOf="@id/TV"
            app:layout_constraintStart_toEndOf="@id/home_page_gl_1"
            app:layout_constraintEnd_toStartOf="@id/home_page_gl_2">

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            app:rippleColor="@color/colorPrimary"
            android:id="@+id/CV4"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="120dp"
            app:cardCornerRadius="20dp"
            android:checkable="true"
            android:focusable="true"
            android:clickable="true"
            app:cardElevation="10dp"
            app:layout_constraintTop_toBottomOf="@id/CV3"
            app:layout_constraintStart_toEndOf="@id/home_page_gl_1"
            app:layout_constraintEnd_toStartOf="@id/home_page_gl_2">

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>