<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:rippleColor="@color/colorPrimary"
    android:layoutDirection="rtl"
    android:checkable="true"
    android:focusable="true"
    android:clickable="true"
    app:cardCornerRadius="20dp"
    android:layout_margin="2dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/inside_layout"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/home_page_gl_1_2"
            app:layout_constraintGuide_percent="0.15"/>

        <ImageView
            android:id="@+id/article_iv_1"
            android:layout_margin="3dp"
            android:src="@android:color/holo_blue_dark"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintEnd_toStartOf="@id/home_page_gl_1_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/article_br_1"
            android:contentDescription="@string/todo" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/article_tv_1"
            android:layout_marginStart="5dp"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:text="@string/enterText"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:layout_constraintStart_toEndOf="@id/home_page_gl_1_2"
            app:layout_constraintTop_toBottomOf="@id/article_br_1"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/article_tv_2"
            android:layout_marginStart="5dp"
            android:textSize="12sp"
            android:text="@string/email"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            app:layout_constraintStart_toEndOf="@id/home_page_gl_1_2"
            app:layout_constraintTop_toBottomOf="@id/article_tv_1"
            />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/article_br_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:constraint_referenced_ids="related_tv_1"
            app:barrierDirection="bottom"/>

        <com.google.android.material.textview.MaterialTextView
            android:fontFamily="@font/vazir_bold"
            android:id="@+id/related_tv_1"
            android:layout_margin="2dp"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:text="@string/enterText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>



</com.google.android.material.card.MaterialCardView>