<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:layoutDirection="rtl">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/write_gl_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.025" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/write_gl_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.975"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/write_gl_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/write_gl_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.95" />


        <com.google.android.material.appbar.MaterialToolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layoutDirection="rtl"
        android:id="@+id/topAppBar"
        android:layout_height="?attr/actionBarSize"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/appbar_logo"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="نوشتن مقاله"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/write_appbar_end_icon"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="پیش نویس"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_gravity="end"
            android:layout_marginEnd="5dp"/>

        <ImageView
            android:id="@+id/write_appbar_start_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
            android:layout_gravity="start"/>

    </com.google.android.material.appbar.MaterialToolbar>




        <TextView
            android:id="@+id/write_tx_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="عنوان"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/topAppBar"
            app:layout_constraintStart_toStartOf="@id/write_gl_1"
            app:layout_constraintBottom_toTopOf="@id/write_ti_1"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/write_ti_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/backgroundColor"
            app:layout_constraintTop_toBottomOf="@id/write_tx_1"
            app:layout_constraintEnd_toEndOf="@id/write_gl_2"
            app:layout_constraintStart_toStartOf="@id/write_gl_1"
            app:layout_constraintBottom_toTopOf="@id/write_tx_2"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/write_tx_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="متن مقاله"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/write_ti_1"
            app:layout_constraintStart_toStartOf="@id/write_gl_1"
            app:layout_constraintBottom_toTopOf="@id/write_ti_2"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/write_ti_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/backgroundColor"
            app:layout_constraintTop_toBottomOf="@id/write_tx_2"
            app:layout_constraintEnd_toEndOf="@id/write_gl_2"
            app:layout_constraintStart_toStartOf="@id/write_gl_1"
            app:layout_constraintBottom_toTopOf="@id/write_tx_3"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="20"
                android:lines="10"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/write_tx_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="افزودن پیوست"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/write_ti_2"
            app:layout_constraintStart_toStartOf="@id/write_gl_1"
            app:layout_constraintBottom_toTopOf="@id/write_bt_1"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/write_bt_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="افزودن عکس،ویدئو یا صدا"
            android:textColor="@android:color/black"
            android:backgroundTint="#f3e6ff"
            app:layout_constraintTop_toBottomOf="@id/write_tx_3"
            app:layout_constraintStart_toStartOf="@id/write_gl_1"
            app:layout_constraintEnd_toEndOf="@id/write_gl_2"
            app:layout_constraintBottom_toTopOf="@id/write_bt_2"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/write_bt_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="بارگذاری فایل ها"
            android:backgroundTint="@color/backgroundColor"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@id/write_bt_1"
            app:layout_constraintStart_toStartOf="@id/write_bt_1"
            app:layout_constraintEnd_toEndOf="@id/write_gl_2"
            app:layout_constraintBottom_toTopOf="@id/write_tx_4"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

        <TextView
            android:id="@+id/write_tx_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="کلمه کلیدی"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/write_bt_2"
            app:layout_constraintStart_toStartOf="@id/write_gl_1"
            app:layout_constraintBottom_toTopOf="@id/write_ti_3"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/write_ti_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/cardview_light_background"
            app:layout_constraintTop_toBottomOf="@id/write_tx_4"
            app:layout_constraintStart_toStartOf="@id/write_gl_1"
            app:layout_constraintEnd_toEndOf="@id/write_gl_2"
            app:layout_constraintBottom_toTopOf="@id/write_bt_3"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.chip.Chip
                android:id="@+id/profile_ch_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/backgroundColor"
                android:text="@string/profile_ch_1"
                android:textColor="@color/colorPrimary"
                style="@style/Widget.MaterialComponents.Chip.Entry"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
        app:rippleColor="@color/iconbackgroundColor"
            android:id="@+id/write_bt_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="انتشار مقاله"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/write_ti_3"
            app:layout_constraintStart_toStartOf="@id/write_gl_1"
            app:layout_constraintEnd_toEndOf="@id/write_gl_2"
            app:layout_constraintBottom_toTopOf="@id/write_gl_4"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>